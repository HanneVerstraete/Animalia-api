{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "outDir": "./build",
        "typeRoots": ["node_modules/@types", "src/types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    }
}